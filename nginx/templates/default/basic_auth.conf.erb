server {
  listen 8443;

  location / {
    auth_basic            "FXX K // Secret Smart Key";
    auth_basic_user_file  "/etc/nginx/.htpasswd";
    proxy_pass  http://127.0.0.1:80;
    proxy_set_header        Host            $host;
  }
  location /healthcheck {
    satisfy any;
    allow all;
    proxy_pass  http://127.0.0.1:80/healthcheck;
    proxy_set_header        Host            $host;
  }
}
